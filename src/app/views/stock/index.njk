{% extends "layout.njk" %}

{% block content %}
    <div class="card index-container">
        <div class="card-header">
            <h2>Estoque</h2>
        </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantidade</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for item in items %}
                    <tr>
                        <td>
                            {{item.description}}
                        </td>
                        <td>
                            {{item.quantity}}
                        </td>
                        <td>
                            <a href="/stock/{{item.id}}/edit" class="button">Editar</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
{% endblock content %}
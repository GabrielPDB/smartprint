{% extends "layout.njk" %}

{% block content %}
    <div class="card show-edit-create-container">
        <div class="card-header">
            <h2>Detalhes</h2>
            <div class="buttons">
                <form action="/items?_method=DELETE" method="post" id="form-delete">
                    <input type="hidden" name="id" value="{{ item.id }}">
                    <button type="submit" class="delete-button">Excluir item</button>
                </form>

            </div>
        </div>
        <form action="/items?_method=PUT" method="post" class="details">

            {% include "items/fields.njk" %}

            <input type="hidden" name="id" value="{{ item.id }}">

            <button type="submit">Salvar item</button>
        </form>
    </div>

    {% include "confirmDelete.njk" %}

{% endblock content %}
{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        <div class="header-card">
            <h2>Itens cadastrados</h2>
            <a href="/items/create">Novo item</a>
        </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>ID do item</th>
                    <th>Descrição do item</th>
                    <th>Largura (mm)</th>
                    <th>Altura (mm)</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for item in items %}
                    <tr>
                        <td>
                            {{item.id}}
                        </td>
                        <td>
                            {{item.description}}
                        </td>
                        <td>
                            {{item.width}}
                        </td>
                        <td>
                            {{item.height}}
                        </td>
                        <td>
                            <a href="/items/{{item.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}
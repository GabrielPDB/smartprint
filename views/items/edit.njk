{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="details">
            <h3>Editar Item</h3>

            <form method="POST" action="/items?_method=PUT">

                {% include "items/fields.njk" %}

                <input type="hidden" name="id" value="{{item.id}}">

            </form>

            <form action="/items?_method=DELETE" id="form-delete" method="post">
                <input type="hidden" name="id" value="{{item.id}}">

                <button type="submit">Deletar</button>
            </form>
        </section>
    </div>

{% endblock content %}